<h1>Listing Recipes</h1>

<div class="row-fluid">
  <div class="span12">
    <ul class="thumbnails">
      <% @recipes.each_index do |recipe_index| %>
        <% if recipe_index % 3 == 0 %>
          </ul>
          <ul class="thumbnails">
        <% end %>
        <div class="span4">
          <div class="thumbnail">
            <img alt="" src="http://placehold.it/300x200">
            <div class="caption">
              <h3><%= @recipes[recipe_index].name %></h3>
              <p>
                <% if current_user %>
                  <%= link_to 'Show', @recipes[recipe_index], class:"btn" %>
                  <%= link_to 'Edit', edit_recipe_path(@recipes[recipe_index]), class:"btn"  %>
                  <%= link_to 'Remove', @recipes[recipe_index], :confirm => 'Are you sure?', :method => :delete, class:"btn"  %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
</div>
