<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Recipicious - Delicious Recipes :-)", "/", class: "brand" %>
      <ul class="nav pull-right">
        <% if @search %>
          <%= search_form_for @search, html: {class: "navbar-search pull-left"} do |f| %>
            <div class="field">
              <%= f.text_field :name_cont, { placeholder: "Search by recipe name", class: "search-query span2" } %>
  <!--            <%= f.text_field :ingredients_name_cont, { placeholder: "Search", class: "search-query span2" } %> -->
            </div>
          <% end %>
        <% end %>
        <% if current_user %>
          <li><%= link_to 'New recipe', new_recipe_path %></li>
        <% end %>
        <li class="dropdown">
          <a data-toggle="dropdown" class="dropdown-toggle" href="#">About<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Me", "me"%></li>
            <li><%= link_to "This website", "about" %></li>
          </ul>
        </li>
        <% if current_user %>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
